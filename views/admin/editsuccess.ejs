<!-- Success Popup Modal -->
<div id="editSuccessModal" class="custom-modal">
    <div class="modal-content">
        <span class="close-modal">&times;</span>
        <h2>Success</h2>
        <p>Your post has been edited successfully!</p>
        <button id="closeEditSuccessBtn" class="button">Close</button>
    </div>
</div>

<!-- Error Popup Modal -->
<div id="editErrorModal" class="custom-modal">
    <div class="modal-content">
        <span class="close-modal">&times;</span>
        <h2>Error</h2>
        <p>There was a problem editing the post. Please try again.</p>
        <button id="closeEditErrorBtn" class="button">Close</button>
    </div>
</div>
