<!-- views/admin/postsuccess.ejs -->

<!-- Success Popup Modal -->
<div id="successModal" class="custom-modal">
    <div class="modal-content">
        <span class="close-modal">&times;</span>
        <h2>Success</h2>
        <p>Your post has been created successfully!</p>
        <button id="closeSuccessBtn" class="button">Close</button>
    </div>
</div>

<!-- Error Popup Modal -->
<div id="errorModal" class="custom-modal">
    <div class="modal-content">
        <span class="close-modal">&times;</span>
        <h2>Error</h2>
        <p>There was a problem creating the post. Please try again.</p>
        <button id="closeErrorBtn" class="button">Close</button>
    </div>
</div>
