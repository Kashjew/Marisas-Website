<div id="createPostModal" class="create-post-modal">
  <div class="create-post-content">
    <span class="close-create-post">&times;</span>
    <h2>Create a New Post</h2>

    <!-- Add hidden field to store post ID when editing -->
    <form id="createPostForm" action="/admin/create-post" method="POST" enctype="multipart/form-data">
      <input type="hidden" id="postId" name="postId" value="">

      <!-- Title Field -->
      <div class="form-group">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" class="large-input form-input" required>
      </div>

      <!-- TinyMCE Content Editor -->
      <div class="form-group">
        <label for="content-editor">Content:</label>
        <textarea id="content-editor" name="content" class="large-textarea form-textarea"></textarea>
      </div>

      <div class="form-group">
        <label for="tags">Tags:</label>
        <input type="text" id="tagInput" name="tags" class="large-input form-input" placeholder="Enter a tag">
        <button type="button" id="addTagBtn" class="button add-tag-button">Add Tag</button>
        <div id="tagList" class="tag-list"></div>
      </div>

      <!-- Images Section -->
      <div class="form-group">
        <label for="image">Images:</label>
        <input type="file" id="image" name="images" class="large-input form-input" accept="image/*" multiple>
        <p>(You can upload up to 5 images)</p>
        <!-- Container for preview images -->
        <div id="imagePreviewContainer" class="image-preview-container">
          <!-- Draggable previews will be dynamically added here -->
        </div>
      </div>
      <!-- Cover Image Notice -->
      

      <div class="form-group">
        <label for="instagramLink">Instagram Link:</label>
        <input type="url" id="instagramLink" name="instagramLink" class="large-input form-input" placeholder="https://">
      </div>

      <div class="form-group recipe-info-group">
        <div class="recipe-info-item">
          <label for="prepTime">Prep Time:</label>
          <input type="text" id="prepTime" name="recipe[prepTime]" class="small-input form-input" placeholder="e.g., 15 mins">
        </div>

        <div class="recipe-info-item">
          <label for="cookTime">Cook Time:</label>
          <input type="text" id="cookTime" name="recipe[cookTime]" class="small-input form-input" placeholder="e.g., 30 mins">
        </div>

        <div class="recipe-info-item">
          <label for="servings">Servings:</label>
          <input type="text" id="servings" name="recipe[servings]" class="small-input form-input" placeholder="e.g., 4 servings">
        </div>
      </div>

      <!-- TinyMCE Ingredients Editor -->
      <div class="form-group">
        <label for="ingredients-editor">Ingredients:</label>
        <textarea id="ingredients-editor" name="recipe[ingredients]" class="large-textarea form-textarea"></textarea>
      </div>

      <!-- TinyMCE Steps Editor -->
      <div class="form-group">
        <label for="steps-editor">Cooking Steps:</label>
        <textarea id="steps-editor" name="recipe[steps]" class="large-textarea form-textarea"></textarea>
      </div>

      <!-- TinyMCE Notes Editor -->
      <div class="form-group">
        <label for="notes-editor">Additional Notes:</label>
        <textarea id="notes-editor" name="recipe[notes]" class="large-textarea form-textarea"></textarea>
      </div>

      <button type="submit" class="submit-post-btn button">Create Post</button>
    </form>
  </div>
</div>
