<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recipe by Risa</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-2967223854858794"
     crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Lora:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;700&display=swap" rel="stylesheet">
</head>

<body class="user-page">
    <!-- Include JavaScript files -->
    <script type="module" src="/js/scripts.js"></script>
    <script src="/js/modules/columns.js"></script>

    <!-- Header Section with Hero Image -->
    <%- include('partials/header') %>

    <!-- Main Content Area -->
    <div class="main-content">
        <!-- Left Column: "Hello" Section (50% width on desktop) -->
        <div class="left-column">
            <%- include('partials/hello-section') %>
        </div>

        <!-- Right Column for Latest Post (50% width on desktop) -->
        <div class="right-column">
            <% if (latestPost) { %>
                <%- include('partials/latest-post', { post: latestPost, user: user }) %>
                <!-- Include Recipe Card Modal for the latest post -->
                <%- include('partials/RecipeCard', { post: latestPost }) %>
            <% } else { %>
                <p>No latest post available</p>
            <% } %>
        </div>
    </div>

    <!-- Recipes Section (Previous Posts) -->
    <section class="recipe-section">
        <%- include('partials/recipes-section', { posts: recipePosts }) %>
    </section>

    <!-- About Me Section -->
    <section id="about">
    <%- include('partials/about-me') %>
    </section>
    <!-- Recipe Card Modals for Each Post -->
    <% recipePosts.forEach(post => { %>
        <%- include('partials/RecipeCard', { post: post }) %>
    <% }) %>

    <!-- Overlay for Large Image Modal -->
    <div id="modalOverlay" class="modal-overlay" onclick="closeLargeImageModal()" style="display: none;"></div>

    <!-- Footer -->
    <footer class="site-footer">
        <div class="footer-container">
            <p style="color: black;">&copy; 2024 Recipe by Risa. All rights reserved.</p>
        </div>
    </footer>

<!-- Cookie Consent Banner -->
<div id="cookieConsentBanner" class="cookie-banner">
    <p>
      This website uses cookies to improve your experience and personalize ads. By continuing to use this site, you consent to our use of cookies.
      <a href="/privacy-policy" target="_blank">Learn more</a>
    </p>
    <div class="cookie-buttons">
      <button id="acceptCookies">Accept</button>
      <button id="declineCookies">Decline</button>
    </div>
  </div>
</body>
</html>
