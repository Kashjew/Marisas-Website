<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recipe by Risa</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-2967223854858794"
     crossorigin="anonymous"></script>
     <link href="https://fonts.googleapis.com/css2?family=Lora:wght@400;700&display=swap" rel="stylesheet">
</head>

<body class="user-page">
    <!-- Include JavaScript files -->
    <script type="module" src="/js/scripts.js"></script>
    
    <!-- Conditionally include recipe-card.js only if showRecipeCard is true -->
    <% if (showRecipeCard) { %>
        <script type="module">
            import { loadRecipeCard } from '/js/modules/recipe-card.js';
            console.log(loadRecipeCard);
            document.addEventListener("DOMContentLoaded", function() {
                const recipeId = "<%= recipeId %>";
                if (recipeId) {
                    loadRecipeCard(recipeId);  // Function from recipe-card.js to load modal content
                }
            });
        </script>
        <% } else { %>
        <!-- Include columns.js only if showRecipeCard is false to avoid loading it on recipe pages -->
        <script src="/js/modules/columns.js"></script>
        <% } %>
        

    <!-- Header Section with Hero Image -->
    <%- include('partials/header') %>

    <!-- Main Content Area -->
    <% if (showRecipeCard) { %>
        <!-- Display only the Recipe Card when accessing a specific recipe directly -->
        <div class="main-content">
            <%- include('partials/RecipeCard', { post: { _id: recipeId } }) %> <!-- Ensure RecipeCard.ejs is included correctly -->
        </div>
    <% } else { %>
        <!-- Regular homepage content -->
        <div class="main-content">
            <!-- Left Column: "Hello" Section (50% width on desktop) -->
            <div class="left-column">
                <%- include('partials/hello-section') %>
            </div>

            <!-- Right Column for Latest Post (50% width on desktop) -->
            <div class="right-column">
                <% if (latestPost) { %> <!-- Check if latestPost exists -->
                    <%- include('partials/latest-post', { post: latestPost, user: user }) %>
                    <!-- Include Recipe Card Modal for the latest post -->
                    <%- include('partials/RecipeCard', { post: latestPost }) %>
                <% } else { %>
                    <p>No latest post available</p>
                <% } %>
            </div>
        </div>

        <!-- Recipes Section (Previous Posts) -->
        <section class="recipe-section">
            <%- include('partials/recipes-section', { posts: recipePosts }) %> <!-- Pass recipePosts as posts to the partial -->
        </section>

        <!-- About Me Section -->
        <%- include('partials/about-me') %>

        <!-- Recipe Card Modals for Each Post -->
        <% recipePosts.forEach(post => { %>
            <%- include('partials/RecipeCard', { post: post }) %> <!-- Ensure RecipeCard.ejs is included correctly -->
        <% }) %>
    <% } %>

    <!-- Global Large Image Modal (for image enlargement functionality) -->
    <div id="largeImageModal" class="modal" aria-hidden="true">
        <span id="closeLargeImageButton" class="close-large-image">&times;</span>
        <div class="modal-content">
            <img id="largeImage" src="" alt="Large Image">
        </div>
    </div>

    <!-- Overlay for Large Image Modal -->
    <div id="modalOverlay" class="modal-overlay" onclick="closeLargeImageModal()" style="display: none;"></div>

    <!-- Footer -->
    <footer class="site-footer">
        <div class="footer-container">
            <p>&copy; 2024 Recipe by Risa. All rights reserved.</p>
        </div>
    </footer>

</body>
</html>