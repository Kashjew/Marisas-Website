<!-- Header Section with Hero Image -->
<header class="hero-header">
    <!-- Hamburger Menu for Mobile -->
    <button id="hamburgerMenu" class="mobile-only">&#9776;</button>

    <!-- Hamburger Menu Content -->
    <div id="menuContainer" class="menu-container hidden">
        <!-- Close Button for Menu -->
        <button id="closeMenu" class="close-menu-button">&times;</button>

        <!-- Add Filter by Tag Dropdown inside Hamburger Menu -->
        <div class="dropdown-container">
            <form action="/filter" method="GET">
                <label for="tagFilter">Filter by Tag:</label>
                
                <!-- Only render the tag dropdown if tags are available -->
                <% if (typeof tags !== 'undefined' && tags.length > 0) { %>
                    <select name="tag" id="tagFilter" class="tag-filter-dropdown">
                        <option value="">Select a tag</option>
                        <% tags.forEach(function(tag) { %>
                            <option value="<%= tag %>"><%= tag %></option>
                        <% }); %>
                    </select>
                <% } else { %>
                    <p>No tags available</p> <!-- Optional: Display a message if no tags are available -->
                <% } %>

                <button type="submit" id="filterTagButton">Filter</button>
            </form>
        </div>
    </div>

    <!-- Logo and Hero Image -->
    <div class="logo-container">
        <img src="/images/hero-image.jpg" alt="hero image" class="hero-image">
    </div>

    <!-- User Options Section -->
    <div class="user-options-container">
        <% if (user) { %>
            <div class="login-container">
                <p>Welcome, <%= user.username ? user.username : 'User' %>! <a href="/logout" class="login-btn">Logout</a></p>
            </div>
        <% } else { %>
            <div class="login-container">
                <!-- Temporarily hiding login button -->
                <% /* <a href="/login" class="login-btn">Login</a> */ %>
            </div>
        <% } %>
    </div>
</header>
